<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_dialog"
    android:padding="24dp">

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:contentDescription="card img"/>

    <TextView
        android:id="@+id/cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="12dp" />

    <View
        android:id="@+id/colorDivider"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/cardEffect"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp" />

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:padding="0dp">

        <!-- Row 1 -->
        <TextView
            android:id="@+id/cardId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>

        <TextView
            android:id="@+id/cardRarity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>

        <!-- Row 2 -->
        <TextView
            android:id="@+id/cardRole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>

        <TextView
            android:id="@+id/cardAttribute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>

        <!-- Row 3 -->
        <TextView
            android:id="@+id/cardPower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>

        <TextView
            android:id="@+id/cardCounter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>

        <!-- Row 4 -->
        <TextView
            android:id="@+id/cardCost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>

        <TextView
            android:id="@+id/cardColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingVertical="4dp"/>
    </GridLayout>

    <TextView
        android:id="@+id/cardType"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"/>

    <TextView
        android:id="@+id/cardSet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp" />

</LinearLayout>